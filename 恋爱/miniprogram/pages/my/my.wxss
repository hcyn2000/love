/* miniprogram/pages/my/my.wxss */
page {
    background-color: #fff;
}
.content-head {
    background: linear-gradient(to bottom,#6495ED,	#87CEEB);
    padding-top: 70rpx ;
    overflow: hidden;
    animation: slideInDown 2.5s 1;
    text-align: center;
}
.content-head-headshot {
    margin: 0 auto;
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    overflow: hidden;
}
.content-head-headshot image {
    width: 100%;
    height: 100%;
}
.content-head-text {
    text-align: center;
    padding: 40rpx 0;
    color: #fff;
}
.content-head .btn {
    display: inline-block;
    margin: 25rpx 0;
    width: 50%;
    border-radius: 50rpx;
}
.list {
    display: flex;
    align-items: center;
}
.listImg {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}
.shishi{
    animation: fadeInRight 2.5s 1;
}
<!-- 搜索框 -->
<van-search
  class="searchbox"
  value="{{ value }}"
  placeholder="请输入搜索关键词"
  use-action-slot
  bind:change="onChange"
  bind:search="onSearch"
>
  <view slot="action" bind:tap="onClick">搜索</view>
</van-search>


<view class="hotSearch">
    <text class="searchbar" >热门搜索</text>
</view>

<!-- 热门搜索 -->
<view class="keywordbox" wx:for="{{items}}" wx:key="index">
    <view class="keyword">{{item.name1}}</view>
    <view class="keyword">{{item.name2}}</view>
    <view class="keyword">{{item.name3}}</view>
</view>
  